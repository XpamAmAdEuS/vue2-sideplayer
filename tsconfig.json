{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "strict": false,
    "outDir": "dist",
    "declaration": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
